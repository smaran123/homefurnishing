<!-- Photoswipe Plugin -->
<script type="text/javascript" src="/assets/admin/plugins/photoswipe/lib/klass.min.js"></script>
<script type="text/javascript" src="/assets/admin/plugins/photoswipe/js/code.photoswipe.jquery-3.0.4.min.js"></script>
<link rel="stylesheet" href="/assets/admin/plugins/photoswipe/css/photoswipe.css" media="screen" />
<!-- Demo JavaScript Files -->
<script type="text/javascript" src="/assets/admin/js/demo/demo.gallery.js"></script>

<div class="grid_4">
  <%#*scrollable%>
  <div class="da-panel collapsible">
    <div class="da-panel-header">
      <span class="da-panel-title">
        <img src="/assets/admin/images/icons/black/16/list.png" alt="" />
        Order Summery
      </span>
    </div>
    <% if @order.address1 != @order.address && @order.same_as_billing == false %>
    <div class="da-panel-content">
      <table id="da-ex-datatable-default" class="da-table">
        <thead>
          <tr>
            <th><b style="color:#B0B0B0">Shipping Address</b> </th>
            <th><b>Order Id</b></th>
            <th><b>First name</b> </th>
            <th><b>Last name</b> </th>
            <th><b>Address</b></th>
            <th><b>LandMark</b></th>
            <th><b>Pincode</b></th>
            <th><b>City || State</b></th>
            <th><b>Ip Address</b></th>
            <th><b>Status</b></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td><%= @order.id %></td>
            <td><%= @order.first_name1.capitalize %></td>
            <td>  <%= @order.last_name1.capitalize %></td>
            <td> <%= @order.address1.capitalize %></td>
            <td>  <%=  @order.landmark1.titleize%></td>
            <td>  <%=  @order.pincode1%></td>
            <td>  <%= @order.city1.capitalize %> || <%=  @order.state %> </td>
            <td>  <%= @order.ip_address %></td>
            <td>  <%= @order.status %> </td>
          </tr>
        </tbody>
      </table>
      
    </div>
    
    <div class="da-panel-content">
      <table id="da-ex-datatable-default" class="da-table">
        <thead>
          <tr>
            <th><b style="color:#B0B0B0">Billing Address</b> </th>
            <th><b>First name</b> </th>
            <th><b>Last name</b> </th>
            <th><b>Email Id</b></th>
            <th><b>Address</b></th>
            <th><b>LandMark</b></th>
            <th><b>Pincode</b></th>
            <th><b>City || State</b></th>
            <th><b>Ip Address</b></th>
            <th><b>Status</b></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td><%= @order.first_name.capitalize %></td>
            <td>  <%= @order.last_name.capitalize %></td>
            <td><%= @order.email %></td>
            <td> <%= @order.address.capitalize %></td>
            <td>  <%=  @order.landmark.titleize%></td>
            <td>  <%=  @order.pincode%></td>
            <td>  <%= @order.city.capitalize %> || <%=  @order.state %> </td>
            <td>  <%= @order.ip_address %></td>
            <td>  <%= @order.status %> </td>
          </tr>
        </tbody>
      </table>
      
    </div>
    <% else %>

    <div class="da-panel-content">
      <table id="da-ex-datatable-default" class="da-table">
        <thead>
          <tr>
            <th><b style="color:#B0B0B0">Billing And Shipping Address</b> </th>
            <th><b>Order Id</b></th>
            <th><b>First name</b> </th>
            <th><b>Last name</b> </th>
            <th><b>Email Id</b></th>
            <th><b>Address</b></th>
            <th><b>LandMark</b></th>
            <th><b>Pincode</b></th>
            <th><b>City || State</b></th>
            <th><b>Ip Address</b></th>
            <th><b>Status</b></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td><%= @order.id %></td>
            <td><%= @order.first_name.capitalize %></td>
            <td>  <%= @order.last_name.capitalize %></td>
            <td><%= @order.email %></td>
            <td> <%= @order.address.capitalize %></td>
            <td>  <%=  @order.landmark.titleize%></td>
            <td>  <%=  @order.pincode%></td>
            <td>  <%= @order.city.capitalize %> || <%=  @order.state %> </td>
            <td>  <%= @order.ip_address %></td>
            <td>  <%= @order.status %> </td>
          </tr>
        </tbody>
      </table>
      
    </div>

    <% end %>
    <% if @order_items.present? %>
    <table id="da-ex-datatable-default" class="da-table">
      <tr>
        <th><b>Image </b></th>
        <th><b>Item</b> </th>
        <th><b>Quantity</b></th>
        <th><b>UnitPrice</b></th>
        <th><b>FullPrice</b></th>
      </tr>
      <% @order_items.each do |order_item| %>
      <% if order_item.product.present? %>
      <tr>
        <td>
          <%= image_tag(order_item.product.images.present? ? (order_item.product.images.first.avatar.url) : "/assets/missing.png", height: "50px", width: "80px") %>
        </td>
        <td><%= order_item.product.name %></td>
        <td><%= order_item.quantity %></td>
        <td>Rs. <%= order_item.unit_price %></td>
        <td>Rs. <%= order_item.full_price %></td>
      </tr>
      <% else %>
      <tr>
        <td>
          Currently no products ordered.
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
    <% end %>
  </div>  

</div>